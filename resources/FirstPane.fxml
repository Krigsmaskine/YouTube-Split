<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="mainVBox" spacing="5.0" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <Label text="YouTube URL" />
    <HBox>
        <TextField fx:id="urlField" promptText="URL" HBox.hgrow="ALWAYS" />
        <Button fx:id="getDescriptionButton" mnemonicParsing="false" prefWidth="30.0" text="⬇" />
    </HBox>
   <Label fx:id="descriptionLabel" text="Description" />
   <TextArea fx:id="descriptionBox" focusTraversable="false" prefHeight="300" prefWidth="500">
      <font>
         <Font name="Monospaced Regular" size="13.0" />
      </font></TextArea>
   <Label text="Regular Expression" />
   <HBox>
      <TextField fx:id="regexField" promptText="Regex" HBox.hgrow="ALWAYS">
         <tooltip>
            <Tooltip text="Ex: &quot;{TIMESTAMP} {SONG} - {ARTIST}&quot; matches &quot;2:02 Snail Mail - Heat Wave&quot;" />
         </tooltip></TextField>
      <Button fx:id="regexButton" mnemonicParsing="false" prefWidth="30.0" text="➡" />
   </HBox>
</VBox>
